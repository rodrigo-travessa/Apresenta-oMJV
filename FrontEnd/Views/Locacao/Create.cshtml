@model CreateLocacaoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Locacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Locacao.Id" class="form-control" hidden/>
                <span asp-validation-for="Locacao.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locacao.ClienteId" class="control-label"></label>
                <span asp-validation-for="Locacao.ClienteId" class="text-danger"></span>
                <select asp-for="Locacao.ClienteId" class="form-select"
                        asp-items="@(new SelectList(Model.Clientes, nameof(Cliente.Id), nameof(Cliente.Nome)))">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Locacao.CarroId" class="control-label"></label>
                <span asp-validation-for="Locacao.CarroId" class="text-danger"></span>
                <select asp-for="Locacao.CarroId" class="form-select"
                        asp-items="@(new SelectList(Model.Carros, nameof(Carro.Id), nameof(Carro.Modelo)))">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Locacao.DataLocacao" class="control-label"></label>
                <input asp-for="Locacao.DataLocacao" class="form-control" />
                <span asp-validation-for="Locacao.DataLocacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locacao.DataDevolucao" class="control-label"></label>
                <input asp-for="Locacao.DataDevolucao" class="form-control" disabled />
                <span asp-validation-for="Locacao.DataDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Locacao.ValorTotal" class="control-label"></label>
                <input asp-for="Locacao.ValorTotal" class="form-control" disabled/>
                <span asp-validation-for="Locacao.ValorTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
